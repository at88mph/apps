<!DOCTYPE project>
<project default="build" basedir=".">
    <property environment="env" />

    <!-- site-specific build properties or overrides of values in opencadc.properties -->
    <property file="${env.CADC_PREFIX}/etc/local.properties" />

    <!-- site-specific targets, e.g. install, cannot duplicate those in opencadc.targets.xml -->
    <import file="${env.CADC_PREFIX}/etc/local.targets.xml" optional="true" />

    <!-- default properties and targets -->
    <property file="${env.CADC_PREFIX}/etc/opencadc.properties" />
    <import file="${env.CADC_PREFIX}/etc/opencadc.targets.xml"/>

    <!-- developer convenience: place for extra targets and properties -->
    <import file="extras.xml" optional="true" />

<property name="project" value="cadcDownloadManager" />

<property name="jars" value="${lib}/cadcUtil.jar:${ext.lib}/servlet-api.jar" />

<target name="build" depends="client,servlet,api,resources" />

<target name="client" depends="compile">
	<jar jarfile="${build}/lib/${project}Client.jar"
		basedir="${build}/class" 
		update="no">
                <include name="**/client/**" />
                <include name="**/DownloadUtil**" />
                <include name="ca/onfire/**" />
    </jar>
</target>

<target name="servlet" depends="compile">
    <jar jarfile="${build}/lib/${project}Server.jar"
		basedir="${build}/class" 
		update="no">
            <include name="ca/nrc/cadc/dlm/DownloadUtil**" />
            <include name="ca/nrc/cadc/dlm/server/**" />
    </jar>
    
</target>

<!-- a jar to contain the extension API -->
<target name="api" depends="compile">
    <jar jarfile="${build}/lib/${project}API.jar"
		basedir="${build}/class" 
		update="no">
            <include name="ca/nrc/cadc/dlm/client/event/**" />
    </jar>
</target>

<target name="resources" depends="init">
    <copy todir="${build}/resources/${project}">
        <fileset dir="src/jsp">
            <include name="**.jsp" />
        </fileset>
    </copy>
</target>

<!-- 
optional/example target to build a vanilla warfile 
note: client jars are not signed
-->
<target name="warfile" depends="build">
    <war warfile="${build}/webapps/downloadManager.war" webxml="src/xml/web.xml" update="no">

        <fileset dir="${build}/resources/${project}/">
            <include name="**.jsp" />	
        </fileset>
        <fileset dir="${build}/lib">
            <include name="${project}Client.jar" />
        </fileset>
        <fileset dir="${lib}">
            <include name="cadcUtil.jar" />
        </fileset>

        <lib dir="${build}/lib">
            <include name="cadcDownloadManagerServer.jar" />
        </lib>
        <lib dir="${lib}">
            <include name="cadcUtil.jar" />
        </lib>
        
        <lib dir="${ext.lib}">
            <include name="jstl.jar" />
            <include name="standard.jar" />
        </lib>
        <webinf dir="${ext.lib}/tld">
            <include name="c.tld" />
        </webinf>
    </war>
</target>

</project>
